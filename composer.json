{
    "name":         "herzult/php-ssh",
    "type":         "library",
    "description":  "Provides an object-oriented wrapper for the php ssh2 extension.",
    "keywords":     ["ssh", "ssh2"],
    "license":      "MIT",
    "authors": [
        {
            "name": "Antoine HÃ©rault",
            "homepage": "https://github.com/Herzult"
        },
        {
            "name":     "The contributors",
            "homepage": "http://github.com/Herzult/php-ssh/contributors"
        }
    ],
    "require": {
        "php": ">=5.3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "symfony/filesystem": "~2.4"
    },
    "suggest": {
        "ext-ssh2": "To use php-ssh install ssh2 extension"    
    },
    "autoload": {
        "psr-0": {
            "Ssh": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
